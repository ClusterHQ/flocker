{% macro wrappers()                                                         -%}
{# adds a list of common wrappers to the build jobs                          #}
    wrappers {
      timestamps()
      colorizeOutput()
      timeout {
          absolute(15)
          failBuild()
      }
    }
{%- endmacro                                                                -%}
