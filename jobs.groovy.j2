{% macro steps(v)                                                           -%}
{#  builds a list of job steps based on the type of the job:
    ( 'shell', others )
    currently only shell has been implemented.
    params: dictionary containing the job values                             #}
    steps {
{%  for _step in v                                                          -%}
{%    if _step.type=='shell'                                                 %}
    shell("""
{%      for line in _step.cli                                               -%}
      {{ line }}
{%      endfor                                                              -%}
    """)
{%    endif                                                                 -%}
{%  endfor                                                                   %}
    }
{%- endmacro                                                                -%}
